<script>
    $(document).ready(() => {
        $("#Role")[0].firstChild.remove()
        $("#DirectionField").hide()
        $("#ModeratorField").hide()
        handleRoleDirection($("#Role").val())
    })

    $("#Role").change(function(e) {
       handleRoleDirection(e.target.value)
    })

    function handleRoleDirection(value) {
         if(value === "2") {
            $("#DirectionField").show()
            $("#DirectionId").attr("required", true)
            $("#ModeratorField").hide()
            $("#ModeratorId").attr("required", false)
        } else if(value === "3") {
            $("#DirectionField").hide()
            $("#DirectionId").attr("required", false)
            $("#ModeratorField").show()
            $("#ModeratorId").attr("required", true)
        } else {
            $("#DirectionField").hide()
            $("#ModeratorId").attr("required", false)
            $("#ModeratorField").hide()
            $("#DirectionId").attr("required", false)
        }
    }
</script>