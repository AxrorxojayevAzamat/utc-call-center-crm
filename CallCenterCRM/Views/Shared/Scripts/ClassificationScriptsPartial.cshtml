<script>
	let directionInput = $("#Direction")
	let valueInput = $("#Value")

	$("#ClassificationId").on("select2:select", function(e) {
		let id = e.params.data.id
		console.log(id)
		requestToClassification(id)
	})

	function requestToClassification(classificationId) {
		console.log(classificationId)
		if(classificationId !== "-") {
			$.ajax({
				url: location.origin + `/api/classifications/${classificationId}`,
				method: "GET",
				dataType: 'json',
				contentType: false,
				cache: false,
				processData: false,
				success: function(data) {
					$("#Direction").val(data.direction) 
					$("#Value").val(data.value) 
				},
				error: function(error) {
					console.error("Error !!!")
				}
			})
		} else {
			$("#Direction").val("") 
			$("#Value").val("")
		} 
	}
</script>