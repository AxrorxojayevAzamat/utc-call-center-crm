@model CallCenterCRM.Models.Classification

@{
	ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Классификация</h4>
<hr />
<form asp-action="Edit">
	<div class="row">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="CreatedDate" />
		 <div class="form-group col-md-5">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="DirectionId" class="control-label"></label>
            <select asp-for="DirectionId" class="form-control" asp-items="@ViewBag.DirectionId"></select>
            <span asp-validation-for="DirectionId" class="text-danger"></span>
        </div>
        <div class="form-group form-check col-md-4">
            <label class="form-check-label mt-4 mx-2">
                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
            </label>
        </div>
        <div class="form-group col-md-8">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
		<div class="form-group col-md-12 mt-3">
			<input type="submit" value="Сохранить" class="btn btn-success btn-rounded" />
			<a asp-action="Index" class="btn btn-secondary btn-rounded btn-fw mx-3">Назад</a>
		</div>
	</div>
</form>

@section Scripts {
    @{
		await Html.RenderPartialAsync("Scripts/_ValidationScriptsPartial");
		await Html.RenderPartialAsync("Scripts/_Select2ScriptsPartial");
	}
}
