@model CallCenterCRM.Forms.UpdateUserInput

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Пользователь</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" class="form-control" />
        <div class="form-group col-md-4">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Contact" class="control-label"></label>
            <input asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Role" class="control-label"></label>
            <select asp-for="Role" class="form-control" asp-items="Model.RolesList"></select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4" id="ModeratorField">
            <label asp-for="ModeratorId" class="control-label"></label>
            <select asp-for="ModeratorId" class="form-control" asp-items="ViewBag.ModeratorId"></select>
            <span asp-validation-for="ModeratorId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4" id="DirectionField">
            <label asp-for="DirectionId" class="control-label"></label>
            <select asp-for="DirectionId" class="form-control" asp-items="ViewBag.DirectionId"></select>
            <span asp-validation-for="DirectionId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-12 mt-3">
            <input type="submit" value="Сохранить" class="btn btn-success btn-rounded" />
            <a asp-action="Index" class="btn btn-secondary btn-rounded btn-fw mx-3">Назад</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
		await Html.RenderPartialAsync("Scripts/_ValidationScriptsPartial");
		await Html.RenderPartialAsync("Scripts/_InputMaskScriptsPartial");
        await Html.RenderPartialAsync("Scripts/PasswordScriptsPartial");
		await Html.RenderPartialAsync("Scripts/RoleScriptsPartial");
	}
}
