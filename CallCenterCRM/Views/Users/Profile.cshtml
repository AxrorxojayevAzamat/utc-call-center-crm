@model CallCenterCRM.Forms.ProfileInput

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Пользователь</h4>
<hr />
<form asp-action="Profile">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <div class="form-group col-md-4">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Firstname" class="control-label"></label>
            <input asp-for="Firstname" class="form-control" />
            <span asp-validation-for="Firstname" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Middlename" class="control-label"></label>
            <input asp-for="Middlename" class="form-control" />
            <span asp-validation-for="Middlename" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PassportData" class="control-label"></label>
            <textarea asp-for="PassportData" class="form-control"> </textarea>
            <span asp-validation-for="PassportData" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Address" class="control-label"></label>
            <textarea asp-for="Address" class="form-control"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        @if (ViewBag.Role == Roles.CrmModerator)
        {
            <div class="form-group col-md-4">
                <label asp-for="ClassificationId" class="control-label"></label>
                <select asp-for="ClassificationId" class="form-control" asp-items="ViewBag.ClassificationId"></select>
                <span asp-validation-for="ClassificationId" class="text-danger"></span>
            </div>
        }
        else if (ViewBag.Role == Roles.CrmOrganization)
        {
            <div class="form-group col-md-4">
                <label asp-for="ModeratorId" class="control-label"></label>
                <select asp-for="ModeratorId" class="form-control" asp-items="ViewBag.ModeratorId"></select>
                <span asp-validation-for="ModeratorId" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="form-group col-md-4">
            </div>
        }
        <div class="form-group col-md-12 mt-3">
            <input type="submit" value="Сохранить" class="btn btn-success btn-rounded" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-rounded btn-fw mx-3">Назад</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
		await Html.RenderPartialAsync("Scripts/_ValidationScriptsPartial");
		await Html.RenderPartialAsync("Scripts/_InputMaskScriptsPartial");
		await Html.RenderPartialAsync("Scripts/_Select2ScriptsPartial");
	}
}
