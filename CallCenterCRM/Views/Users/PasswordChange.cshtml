@model CallCenterCRM.Forms.PasswordChangeInput

<h1>Изменить пароль</h1>

<h4>Пользователь</h4>
<hr />
<form asp-action="PasswordChange">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="OldPassword" />
        <div class="form-group col-md-4">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="NewPassword" class="control-label"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
         <div class="form-group col-md-4">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group col-md-12 mt-3">
            <input type="submit" value="Сохранить" class="btn btn-success btn-rounded" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-rounded btn-fw mx-3">Назад</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
		await Html.RenderPartialAsync("Scripts/_ValidationScriptsPartial");
	}
}
