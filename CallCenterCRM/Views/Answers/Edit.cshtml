		</div>
		<div class="form-group col-md-4">
			<label asp-for="ResponseLetter" class="control-label"></label>
			<input asp-for="ResponseLetter" class="form-control" />
			<span asp-validation-for="ResponseLetter" class="text-danger"></span>
		</div>
		<div class="form-group col-md-4">
			<label asp-for="AttachmentId" class="control-label"></label>
