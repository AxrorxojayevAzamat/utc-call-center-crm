@model CallCenterCRM.Models.Application

@{
    ViewData["Title"] = "Edit";
}

<h1>Задерживать</h1>

<h4>Обращения</h4>
<hr />
<form asp-action="Delay">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <div class="form-group col-md-4">
            <label asp-for="ExpireTime" class="control-label"></label>
            <input asp-for="ExpireTime" class="form-control" min=@ViewBag.MinDate />
            <span asp-validation-for="ExpireTime" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 mt-3">
            <input type="submit" value="Отложить" asp-action="Delay" asp-route-id=@Model.Id class="btn btn-warning btn-rounded" />
            <a asp-action="Details" asp-route-id=@Model.Id class="btn btn-secondary btn-rounded btn-fw mx-3">Назад</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
		await Html.RenderPartialAsync("Scripts/_ValidationScriptsPartial");
	}
}
